<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:id="@+id/todays_training_screen"
  android:background="@color/orange"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <com.uplifter.ui.UplifterTextView android:layout_width="fill_parent"
      android:layout_height="100dp"
      android:paddingLeft="25dp"
      android:paddingBottom="25dp"
      android:layout_gravity="bottom|left"
      android:gravity="bottom|left"
      android:textColor="@color/white"
      android:textSize="20sp"
      android:text="@string/todays_training_title"
      android:background="@drawable/landscape"
      />
    <com.uplifter.ui.UplifterTextView android:id="@+id/q1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="left"
      android:layout_marginTop="15dp"
      android:paddingLeft="40dp"
      android:paddingRight="40dp"
      android:textColor="@color/white"
      android:textSize="18sp"
      android:text=""/>
    <com.uplifter.ui.UplifterTextView android:id="@+id/s1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="left"
      android:paddingLeft="40dp"
      android:paddingRight="40dp"
      android:textColor="@color/white"
      android:textSize="14sp"
      android:text=""/>
    <com.uplifter.ui.UplifterTextView android:id="@+id/q2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="left"
      android:layout_marginTop="15dp"
      android:paddingLeft="40dp"
      android:paddingRight="40dp"
      android:textColor="@color/white"
      android:textSize="18sp"
      android:text=""/>
    <com.uplifter.ui.UplifterTextView android:id="@+id/s2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="left"
      android:paddingLeft="40dp"
      android:paddingRight="40dp"
      android:textColor="@color/white"
      android:textSize="14sp"
      android:text=""/>
    <com.uplifter.ui.UplifterTextView android:id="@+id/q3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="left"
      android:layout_marginTop="15dp"
      android:paddingLeft="40dp"
      android:paddingRight="40dp"
      android:textColor="@color/white"
      android:textSize="18sp"
      android:text=""/>
    <com.uplifter.ui.UplifterTextView android:id="@+id/s3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="left"
      android:paddingLeft="40dp"
      android:paddingRight="40dp"
      android:textColor="@color/white"
      android:textSize="14sp"
      android:text=""/>
  </LinearLayout>
  <Button
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:background="@drawable/uplifter_button"
    android:textColor="@color/white"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:onClick="sendMessage"
    android:text="@string/start"
  />
</RelativeLayout>