<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:id="@+id/todays_training_screen"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <TextView android:layout_width="fill_parent"
    android:layout_height="150dp"
    android:paddingLeft="25dp"
    android:paddingBottom="25dp"
    android:layout_gravity="bottom|left"
    android:gravity="bottom|left"
    android:textColor="@color/white"
    android:textSize="20sp"
    android:text="@string/todays_training_title"
    android:background="@drawable/landscape"
    />
  <LinearLayout android:background="@color/orange"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView android:id="@+id/q1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="left"
      android:layout_marginTop="15dp"
      android:paddingLeft="40dp"
      android:paddingRight="40dp"
      android:textColor="@color/white"
      android:textSize="20sp"
      android:text=""/>
    <TextView android:id="@+id/s1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="left"
      android:layout_marginTop="8dp"
      android:paddingLeft="40dp"
      android:paddingRight="40dp"
      android:textColor="@color/white"
      android:textSize="12sp"
      android:text=""/>
    <TextView android:id="@+id/q2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="left"
      android:layout_marginTop="15dp"
      android:paddingLeft="40dp"
      android:paddingRight="40dp"
      android:textColor="@color/white"
      android:textSize="20sp"
      android:text=""/>
    <TextView android:id="@+id/s2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="left"
      android:layout_marginTop="8dp"
      android:paddingLeft="40dp"
      android:paddingRight="40dp"
      android:textColor="@color/white"
      android:textSize="12sp"
      android:text=""/>
    <TextView android:id="@+id/q3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="left"
      android:layout_marginTop="15dp"
      android:paddingLeft="40dp"
      android:paddingRight="40dp"
      android:textColor="@color/white"
      android:textSize="20sp"
      android:text=""/>
    <TextView android:id="@+id/s3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="left"
      android:layout_marginTop="8dp"
      android:paddingLeft="40dp"
      android:paddingRight="40dp"
      android:textColor="@color/white"
      android:textSize="12sp"
      android:text=""/>
    <Button
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:background="@drawable/uplifter_button"
      android:textColor="@color/white"
      android:layout_marginTop="20dp"
      android:gravity="center"
      android:layout_gravity="center"
      android:onClick="sendMessage"
      android:text="@string/start"
    />
  </LinearLayout>
</LinearLayout>