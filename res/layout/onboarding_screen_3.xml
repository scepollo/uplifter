<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:id="@+id/onboarding_screen_3"
  android:background="@color/purple"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <com.uplifter.ui.UplifterTextView android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_gravity="center"
      android:layout_marginTop="100dp"
      android:textSize="18sp"
      android:textStyle="normal|bold"
      android:textColor="@color/white"
      android:text="@string/onboarding_3_1"/>
    <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:layout_marginLeft="45dp"
      android:layout_marginRight="45dp"
      android:gravity="left"
      android:layout_gravity="left">
      <com.uplifter.ui.UplifterTextView android:id="@+id/onboard_notification_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_gravity="left"
        android:layout_alignParentLeft="true"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="@string/reminders"/>
      <com.uplifter.ui.UplifterTextView android:id="@+id/onboard_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_gravity="left"
        android:layout_marginTop="15dp"
        android:layout_alignParentLeft="true"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_below="@id/onboard_notification_label"
        android:text="@string/time"/>
      <Switch android:id="@+id/onboard_notification_switch"
        android:onClick="switchClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/onboard_notification_label"/>
      <Button android:id="@+id/onboard_notification_times"
        android:onClick="showTimePickerDialog"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/onboard_notification_switch"
        android:layout_toRightOf="@id/onboard_time_label"/>
    </RelativeLayout>
    <com.uplifter.ui.UplifterTextView android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_gravity="center"
      android:layout_marginTop="30dp"
      android:textSize="12sp"
      android:textColor="@color/white"
      android:text="@string/onboarding_3_2"/>
  </LinearLayout>
  
  <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/white" >
    <LinearLayout android:id="@+id/dots"
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="50dp"
      android:layout_gravity="center"
      android:gravity="center" >
      <ImageView android:background="@drawable/lightgrey_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center"
        android:gravity="center"
      />
      <ImageView android:background="@drawable/lightgrey_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center"
        android:gravity="center"
      />
      <ImageView android:background="@drawable/darkgrey_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center"
        android:gravity="center"
      />
      <ImageView android:background="@drawable/lightgrey_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center"
        android:gravity="center"
      />
    </LinearLayout>
  </LinearLayout>
</RelativeLayout>