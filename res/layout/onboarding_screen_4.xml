<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:id="@+id/onboarding_screen_4"
  android:background="@color/yellow"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <com.uplifter.ui.UplifterTextView android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:textSize="18sp"
    android:textColor="@color/white"
    android:textStyle="normal|bold"
    android:layout_marginTop="100dp"
    android:text="@string/onboarding_4_1"/>
  <com.uplifter.ui.UplifterTextView android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:textSize="18sp"
    android:textColor="@color/white"
    android:layout_marginTop="35dp"
    android:text="@string/onboarding_4_2"/>
  <Button
    android:layout_width="250dp"
    android:layout_height="50dp"
    android:background="@drawable/uplifter_button"
    android:textColor="@color/white"
    android:layout_marginTop="135dp"
    android:textSize="18sp"
    android:gravity="center"
    android:layout_gravity="center"
    android:onClick="sendMessage"
    android:text="@string/lets_go"
  />
</LinearLayout>